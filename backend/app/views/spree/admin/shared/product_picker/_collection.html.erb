<table class="table js-product-picker-collection">
  <thead>
    <tr>
      <th><%= Spree.t(:id) %></th>
      <th><%= Spree.t(:name) %></th>
      <th class="actions" width="35"></th>
    </tr>
  </thead>
  <tbody>
    <% product_picker_collection(product_ids).each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td>
          <%= link_to_with_icon 'delete', Spree.t(:delete), "javascript:;", class: 'btn btn-danger btn-sm js-delete-from-product-picker-target', data: { id: product.id }, title: Spree.t(:delete), no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
